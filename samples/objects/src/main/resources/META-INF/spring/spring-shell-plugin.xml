<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:component-scan base-package="org.springframework.shell.samples.objects.commands" />
	<context:annotation-config />
	
	<bean id="helloObjects"
			class="org.springframework.shell.samples.objects.commands.HelloWorldCommands" />

	<bean id="fooRepository"
			class="org.springframework.shell.samples.objects.data.FooRepository" />
	
	<bean id="fooResolver"
			class="org.springframework.shell.samples.objects.data.FooResolver" />
	
	<bean id="fooArrayConverter"
			class="org.springframework.shell.samples.objects.converter.FooArrayConverter">
		<constructor-arg index="0" ref="fooResolver" />
	</bean>
	
	<bean id="fooConverter"
			class="org.springframework.shell.samples.objects.converter.FooConverter">
		<constructor-arg index="0" ref="fooResolver" />
	</bean>
</beans>