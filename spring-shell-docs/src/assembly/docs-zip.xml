<assembly xmlns="https://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="https://maven.apache.org/ASSEMBLY/2.0.0 https://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>docs</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/generated-docs</directory>
            <outputDirectory>reference/htmlsingle</outputDirectory>
            <includes>
                <include>index.html</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/generated-docs</directory>
            <outputDirectory>reference/pdf</outputDirectory>
            <includes>
                <include>index.pdf</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/apidocs</directory>
            <outputDirectory>api</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>